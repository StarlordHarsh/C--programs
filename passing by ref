using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp2
{
    class Program
    {
        void hell(ref int i)
        {
            i = i * i;
            Console.WriteLine(i);
        }
        static void Main(string[] args)
        {
            Program p = new Program();
            int a = 10;
            Console.WriteLine("a was:" + a);
            p.hell(ref a);
            Console.WriteLine("a is:" + a);
            Console.ReadKey();
;        }
    }
}
